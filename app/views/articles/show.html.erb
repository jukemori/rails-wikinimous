<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
 <div class="container">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <p class="btn btn-flat">
    <%= link_to 'articles', articles_path %>
  </p>
  <p class="btn btn-flat">
    <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Delete #{@article.title}?" } %>
  </p>
  <p class="btn btn-flat">
    <%= link_to 'Edit', edit_article_path %>
  </p>
   </div>
</div>
