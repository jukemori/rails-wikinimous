<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <p class='text-danger'><%= message %></p>
  <% end %>
<% end %>
<%= form_with model: @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
